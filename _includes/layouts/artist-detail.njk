---
layout: layouts/base.njk
section: page
---
<!-- Start Page Banner -->
<div class="artist-banner-area">
    <div class="container">
        <div class="page-banner-content">
            <h2>{{ name }}</h2>
        </div>
    </div>
</div>
<!-- End Page Banner -->

<!-- Start Speakers Details Area -->
<div class="speakers-details-area ptb-100">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-12">
                <div class="speakers-details-image">
                    <img src="{{ image }}" alt="image">
                </div>
            </div>

            <div class="col-lg-6 col-md12">
                <div class="speakers-details-content">
                    <h3>{{ name }}</h3>

                    {{ layoutContent | safe }}

                    <ul class="details-info">
                        {% if youtube %}
                        <li>
                            <i class='bx bxl-youtube'></i>
                            <a href="{{youtube}}" class="optional-btn popup-youtube">Bekijk op youtube!</a>

                            {# <a href="{{ youtube }}" target="_blank">Bekijk op youtube</a> #}
                        </li>
                        {% endif %}
                        {% if day %}
                        <li>
                            <i class='bx bxs-calendar'></i>
                            {{ day }}
                        </li>
                        {% endif %}
                        {% if time %}
                        <li>
                            <i class='bx bxs-time' ></i>
                            {{ time }}
                        </li>
                        {% endif %}


                    </ul>

