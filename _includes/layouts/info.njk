---
layout: layouts/base.njk
section: info
---

{{ layoutContent | safe }}
{% set infolist = collections.info %}

<!-- Start FAQ Area -->
<div class="faq-area ptb-100">
    <div class="container">
        <div class="section-title">
            <h2>{{ title }}</h2>
        </div>

        <div class="faq-accordion">
            <div class="accordion" id="FaqAccordion">
                {% for list in infolist | reverse %}
                    <div class="accordion-item">
                        <button class="accordion-button collapsed {{ ['bg-gras-geel', 'bg-baby-oranje', 'bg-kenny-blauw', 'bg-como-groen'] | random }}" type="button" data-bs-toggle="collapse" data-bs-target="#collapse{{ loop.index }}" aria-expanded="false" aria-controls="collapse{{ loop.index }}">
                            {{ list.data.title }}
                        </button>
                        <div id="collapse{{ loop.index }}" class="accordion-collapse collapse" data-bs-parent="#FaqAccordion">
                            <div class="accordion-body">
                                <p>{{ list.data.content | safe }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
<!-- End  FAQ Area -->
